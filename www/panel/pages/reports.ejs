<%- include('./include/head.ejs', { site, page_name }) %>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('./include/aside.ejs', { site }) %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <%- include('./include/navbar.ejs', { user }) %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard / </span> İhbarlar</h4>

              <!-- Yüklenen Bakiyeler -->
                <div class="col-md-12 col-lg-12 order-2 mb-4">
                  <div class="card h-100">
                    <div class="card-header d-flex align-items-center justify-content-between">
                      <h5 class="card-title m-0 me-2">Tüm İhbarlar</h5>
                    </div>
                    <div class="table-responsive text-nowrap">
                        <table class="table table-hover">
                          <thead>
                            <tr>
                              <th>Domain</th>
                              <th>İhbar Yapan Ip</th>
                              <th>Script Adı</th>
                              <th>Durum</th>
                              <th>İhbar Tarihi</th>
                              <th>İşlem</th>
                            </tr>
                          </thead>
                          
                          <tbody class="table-border-bottom-0">
                            <% if (reports.length > 0) { %>
                              <% reports.forEach(license => { %>
                                <tr>
                                  <td><%= license.domain %></td>
                                  <td><%= license.ip %></td>
                                  <td><%= license.script %></td>
                                  <td><% if (license.status == 'İncelendi') { %><span class="badge bg-success"><%= license.status %></span><% } else { %><span class="badge bg-danger"><%= license.status %></span><% } %></td>
                                  <td><%= license.date %></td>
                                  <td>
                                    <a href="/report/<%= license._id %>" class="btn btn-primary btn-sm" title="İncelendi Olarak İşaretle">İncelendi O. İ.</a>
                                  </td>
                                </tr>
                              <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="7" class="text-center">İhbar Bulunamadı</td>
                              </tr>
                            <% } %>
                          </tbody>
                        </table>
                      </div>
                  </div>
                </div>
                <!--/ Yüklenen Bakiyeler -->

            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
<%- include('./include/footer.ejs', { site }) %>