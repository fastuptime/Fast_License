<%- include('./include/head.ejs', { site, page_name }) %>

  <body>
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
      <div class="layout-container">
        <!-- Menu -->
        <%- include('./include/aside.ejs', { site }) %>
        <!-- / Menu -->

        <!-- Layout container -->
        <div class="layout-page">
          <!-- Navbar -->
          <%- include('./include/navbar.ejs', { user }) %>

          <!-- / Navbar -->

          <!-- Content wrapper -->
          <div class="content-wrapper">
            <!-- Content -->

            <div class="container-xxl flex-grow-1 container-p-y">
              <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Dashboard / </span> Lisans Oluştur</h4>

              <div class="row">
                <div class="col-md-12">
                  <div class="card mb-4">
                    <h5 class="card-header">Lisans Oluştur</h5>
                    <div class="card-body">
                      <form id="formAccountSettings" action="/create_license" method="POST">
                        <div class="row">
                          <div class="mb-3 col-md-12">
                            <label for="domain" class="form-label">Domain (domain.com)</label>
                            <input type="text" class="form-control" id="domain" name="domain" placeholder="domain.com" required>
                          </div>

                          <div class="mb-3 col-md-12">
                            <label for="script" class="form-label">Script</label>
                            <select class="form-select" id="script" name="script" required>
                              <% if (scripts.length == 0) { %>
                                <option value="0">Script bulunamadı.</option>
                              <% } %>
                              <% scripts.forEach(x => { %>
                                <option value="<%= x._id %>"><%= x.name %></option>
                              <% }); %>
                            </select>
                          </div>

                          <div class="mb-3 col-md-12">
                            <label for="expire" class="form-label">Son Kullanma Tarihi</label>
                            <input type="date" class="form-control" id="expire" name="expire" required>
                          </div>

                          <script>
                            var today = new Date();
                            today.setDate(today.getDate() + 7);
                            document.getElementById('expire').min = today.toISOString().split('T')[0];
                          </script>

                          <div class="row">
                            <div class="mb-2 col-md-6">
                              <label for="owner_name" class="form-label">Lisans Sahibi Adı</label>
                              <input type="text" class="form-control" id="owner_name" name="owner_name" placeholder="Lisans Sahibi Adı" required>
                            </div>

                            <div class="mb-2 col-md-6">
                              <label for="owner_surname" class="form-label">Lisans Sahibi Soyadı</label>
                              <input type="text" class="form-control" id="owner_surname" name="owner_surname" placeholder="Lisans Sahibi Soyadı" required>
                            </div>
                          </div>
                          
                          <div class="row">
                            <div class="mb-2 col-md-6">
                              <label for="owner_mail" class="form-label">Lisans Sahibi Mail</label>
                              <input type="email" class="form-control" id="owner_mail" name="owner_mail" placeholder="Lisans Sahibi Mail" required>
                            </div>

                            <div class="mb-2 col-md-6">
                              <label for="owner_phone" class="form-label">Lisans Sahibi Telefon</label>
                              <input type="phone" class="form-control" id="owner_phone" name="owner_phone" placeholder="Lisans Sahibi Telefon" required>
                            </div>

                            <script>
                              var phoneMask = IMask(
                                document.getElementById('owner_phone'), {
                                  mask: '(000)000-00-00'
                                });
                            </script>
                          </div>

                          <div class="mb-3 col-md-12">
                            <label for="owner_note" class="form-label">Lisans Sahibi Not</label>
                            <textarea class="form-control" id="owner_note" name="owner_note" rows="3" placeholder="Lisans Sahibi Hakkında Not" required></textarea>
                          </div>
                          <% if (scripts.length == 0) { %>
                            <div class="mt-2">
                              <a href="/create_script" class="btn btn-danger col-12 mb-3">Script Oluştur</a>
                            </div>
                          <% } else { %>
                            <div class="mt-2">
                              <button type="submit" class="btn btn-primary col-12 mb-3" id="submit">Lisans Oluştur</button>
                            </div>
                          <% } %>
                        </div>
                      </form>
                    </div>

                  </div>
                </div>
              </div>

            </div>
            <!-- / Content -->

            <div class="content-backdrop fade"></div>
          </div>
          <!-- Content wrapper -->
        </div>
        <!-- / Layout page -->
      </div>

      <!-- Overlay -->
      <div class="layout-overlay layout-menu-toggle"></div>
    </div>
    <!-- / Layout wrapper -->
<%- include('./include/footer.ejs', { site }) %>